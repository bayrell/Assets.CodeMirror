namespace Assets.CodeMirror;

use Runtime.Interfaces.ContextInterface;
use Runtime.Interfaces.ModuleDescriptionInterface;
use Core.Interfaces.AssetsInterface;
use Core.UI.Render.RenderContainer;


class ModuleDescription implements ModuleDescriptionInterface, AssetsInterface
{
	
	
	/**
	 * Returns module name
	 * @return string
	 */
	lambda string getModuleName() => "Assets.CodeMirror";
	
	
	
	/**
	 * Returns module name
	 * @return string
	 */
	lambda string getModuleVersion() => "5.47.0";
	
	
	
	/**
	 * Returns required modules
	 * @return Map<string>
	 */
	lambda Map<string> requiredModules() =>
	{
		"Core.UI": "*",
	};
	
	
	
	/**
	 * Returns module files load order
	 * @return Collection<string>
	 */
	lambda Collection<string> getModuleFiles() => 
	[
		"Assets.CodeMirror.ModuleDescription",
	];
	
	
	
	/**
	 * Returns enities
	 */
	lambda Collection<Dict> entities() => null;
	
	
	
	/**
	 * Returns required assets
	 * @return Collection<string>
	 */
	lambda Collection<string> assets(ContextInterface context) => null;
	
	
	
	/**
	 * Returns sync loaded files
	 */
	lambda Collection<string> resources(ContextInterface context) =>
		[
			"@Assets.CodeMirror/resources/codemirror/lib/codemirror.css",
			"@Assets.CodeMirror/resources/codemirror/lib/codemirror.js",
			"@Assets.CodeMirror/resources/codemirror/addon/display/autorefresh.js",
			"@Assets.CodeMirror/resources/codemirror/mode/css/css.js",
			"@Assets.CodeMirror/resources/codemirror/mode/xml/xml.js",
			"@Assets.CodeMirror/resources/codemirror/mode/javascript/javascript.js",
			"@Assets.CodeMirror/resources/codemirror/mode/htmlmixed/htmlmixed.js",
		]
	;
	
	
	
	/**
	 * Init render container
	 */
	public static RenderContainer initContainer(RenderContainer container){ return container; }
	
	
	
	/**
	 * Called then module registed in context
	 * @param ContextInterface context
	 */
	public static void onRegister(ContextInterface context){}
	
	
	
	/**
	 * Called then context read config
	 * @param Map<mixed> config
	 */
	public static void onReadConfig(ContextInterface context, Map<mixed> config){}
	
	
	
	/**
	 * Init context
	 * @param ContextInterface context
	 */
	public static void onInitContext(ContextInterface context){}
	
	
}